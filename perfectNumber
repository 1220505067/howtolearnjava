public class Main {
    public static void main(String[] args) {
//perfectNumber
            int number = 6;
            int total = 0;

            for (int i=1;i<number;i++){
                if (number % i ==0){
                    total=total+i;
                }
            }
            if (total== number) {
                System.out.println("The Number Is A Perfect Number");
            }else {
                System.out.println("The Number Is Not A Perfect Number");
            }






    }
}
